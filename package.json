    {
      "path": "dist/lib.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@ethersproject/bignumber": "^5.4.0",
    "@ethersproject/constants": "^5.4.0",
    "@ethersproject/units": "^5.4.0"
